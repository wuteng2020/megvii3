genrule(
    name = "config",
    srcs = glob(
        ["**/*"],
        exclude = ["jconfig.h"],
    ),
    outs = ["jconfig.h"],
    cmd = "pushd external/jpeg_archive/; workdir=$$(mktemp -d -t tmp.XXXXXXXXXX); cp -a * $$workdir; pushd $$workdir; ./configure; popd; popd; cp $$workdir/jconfig.h $(@D); rm -rf $$workdir;",
)

cc_library(
    name = "jpeg",
    srcs = SOURCES,
    hdrs = glob(["**/*.h"]) + [":config"],
    includes = ["."],
    visibility = ["//visibility:public"],
)
